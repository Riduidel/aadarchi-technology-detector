<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.ndx.aadarchi.technology-detector</groupId>
    <artifactId>parent</artifactId>
    <version>master</version>
    <packaging>pom</packaging>

    <name>aadarchi-technology-detector</name>
    <description>A set of scripts able to download artifact informations from multiple sources</description>
    <modules>
        <module>model</module>
        <module>mvnrepository</module>
        <module>npmjs</module>
    </modules>

    <properties>
        <java.version>17</java.version>
        <maven.compiler.release>${java.version}</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>3.2.5</version>
                    <configuration>
                        <reportFormat>plain</reportFormat>
                        <consoleOutputReporter>
                            <disable>true</disable>
                        </consoleOutputReporter>
                        <statelessTestsetInfoReporter implementation="org.apache.maven.plugin.surefire.extensions.junit5.JUnit5StatelessTestsetInfoTreeReporter">
                            <theme>UNICODE</theme>
                            <printStacktraceOnError>true</printStacktraceOnError>
                            <printStacktraceOnFailure>true</printStacktraceOnFailure>
                            <printStdoutOnError>true</printStdoutOnError>
                            <printStdoutOnFailure>true</printStdoutOnFailure>
                            <printStdoutOnSuccess>false</printStdoutOnSuccess>
                            <printStderrOnError>true</printStderrOnError>
                            <printStderrOnFailure>true</printStderrOnFailure>
                            <printStderrOnSuccess>false</printStderrOnSuccess>
                        </statelessTestsetInfoReporter>
                    </configuration>
                    <dependencies>
                        <dependency>
                            <groupId>me.fabriciorby</groupId>
                            <artifactId>maven-surefire-junit5-tree-reporter</artifactId>
                            <version>1.2.1</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>com.diffplug.spotless</groupId>
                <artifactId>spotless-maven-plugin</artifactId>
                <version>2.43.0</version>
                <!-- Beware! order of elements declaration IS important -->
                <configuration>
                    <pom>
                        <sortPom>
                            <encoding>UTF-8</encoding>
                            <!-- The encoding of the pom files -->
                            <indentSchemaLocation>true</indentSchemaLocation>
                            <predefinedSortOrder>custom_1</predefinedSortOrder>
                            <sortDependencies>scope,groupId,artifactId</sortDependencies>
                            <nrOfIndentSpace>4</nrOfIndentSpace>
                        </sortPom>
                    </pom>
                </configuration>
                <executions>
                    <execution>
                        <id><![CDATA[Perform all formatting operations at once]]></id>
                        <goals>
                            <goal>apply</goal>
                        </goals>
                        <phase>process-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <url>https://riduidel.github.io/aadarchi-technology-detector/</url>
    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>Riduidel</id>
            <name>Nicolas Delsaux</name>
            <email>nicolas.delsaux@gmx.fr</email>
            <roles>
                <role>Tech Lead</role>
            </roles>
        </developer>
    </developers>
    <scm>
        <!-- We use https connections for using aadarchi.github.token as
		password -->
        <connection>scm:git:https://git@github.com/Riduidel/aadarchi-technology-detector.git</connection>
        <developerConnection>scm:git:https://git@github.com/Riduidel/aadarchi-technology-detector.git</developerConnection>
        <url>https://github.com/Riduidel/aadarchi-technology-detector.git</url>
        <tag>HEAD</tag>
    </scm>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/Riduidel/aadarchi-technology-detector/issues</url>
    </issueManagement>
</project>
